{
  "manifest_version": 2,

  "name": "Page Appointment",
  "description": "This extension open a specific page at a specific time.",
  "version": "0.1",
  "background": {
    "scripts": ["scripts/pageAppointment.js", "scripts/background.js"]
  },
  "permissions": [
    "tabs",
    "alarms",
    "background",
    "notifications"
  ],
  "web_accessible_resources": ["images/icon.png"],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "views/popup.html",
    "default_title": "Page Appointment"
  }
}